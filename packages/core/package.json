  "keywords": [
    "podcast",
    "astro",
    "framework",
    "cms",
    "sanity"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/podcast-framework/podcast-framework.git",
    "directory": "packages/core"
  }
