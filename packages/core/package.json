{
  "name": "@podcast-framework/core",
  "version": "0.1.0",
  "description": "Core components, layouts, and utilities for podcast websites",
  "author": "Rex Kirshner",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./components/*": "./src/components/*",
    "./layouts/*": "./src/layouts/*",
    "./lib/*": "./src/lib/*",
    "./styles/*": "./src/styles/*"
